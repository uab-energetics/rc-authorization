{
  "name": "rc-authorization",
  "version": "1.0.0",
  "description": "Authorization service for Research Coder",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "concurrently -k -p '[{name}]' -n 'TypeScript,Node' -c 'yellow.bold,cyan.bold,green.bold' 'npm run watch-ts' 'npm run watch-node'",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/index.js",
    "watch-test": "npm run test -- --watchAll",
    "seed-db": "ts-node src/database/seeds/_seeder.ts",
    "test": "jest --forceExit --coverage --verbose"
  },
  "keywords": [
    "Vector",
    "Applications"
  ],
  "author": "Vector Applications",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "amqplib": "^0.5.2",
    "body-parser": "^1.18.3",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-validator": "^5.2.0",
    "glob": "^7.1.2",
    "joi": "^13.3.0",
    "mysql": "^2.15.0",
    "node-laravel-config": "^1.0.0",
    "rxjs": "^5.5.10",
    "typeorm": "^0.2.6"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.3",
    "@types/node": "^10.1.0",
    "concurrently": "^3.5.1",
    "jest": "^22.4.3",
    "nodemon": "^1.17.4",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3"
  }
}
